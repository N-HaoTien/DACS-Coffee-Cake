@model DOAN_COSO.Models.EditProfileModel
@{
    ViewBag.Title = "Sửa thông tin";
    Layout = "~/Views/Shared/LayoutTrangChu.cshtml";
}
@using (Html.BeginForm("EditProfile", "Account", FormMethod.Post))
{
    <div class="form-group-lg" style="margin-top:100px ; margin-left:400px">
        <div class="form-group-lg">
            <h2>@ViewBag.Title.</h2>
        </div>
        <br />
        @Html.HiddenFor(c => c.Id)
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group-lg ">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label text text-warning" })
            <div class="col-lg-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "border-lg border-primary" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label text text-warning" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "border-lg border-primary" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label text text-warning" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address, new { @class = "border-lg border-primary" })
            </div>
        </div>
        <div class="form-group" style="padding:40px 20px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary btn-outline-primary" value="Lưu thông tin" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


