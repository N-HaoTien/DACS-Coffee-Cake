@model DOAN_COSO.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/LayoutTrangChu.cshtml";

}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

<div class="form-group-lg" style="margin-top:100px ; margin-left:400px">
    <div class="form-group-lg">
        <h2>@ViewBag.Title.</h2>
    </div>
    <br />
    
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group-lg ">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label text text-warning" })
        <div class="col-lg-10">
            <input class="border-lg border-primary" data-val="true" data-val-email="Mời bạn nhập đúng địa chỉ Email." data-val-required="Email không được để trống." id="Email" name="Email" placeholder="Nhập Email của bạn" type="text" value="">
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label text text-warning" })
        <div class="col-md-10">
            <input class="border-lg border-primary" data-val="true" data-val-length="The field Tên Của Bạn must be a string with a maximum length of 30." data-val-length-max="30" data-val-required="Tên của bạn không được để trống." id="UserName" name="UserName" placeholder="Nhập tên của bạn" type="text" value="">        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label text text-warning" })
        <div class="col-md-10">
            <input class="border-lg border-primary" data-val="true" data-val-length="The Mật khẩu must be at least 6 characters long." data-val-length-max="100" data-val-length-min="6" data-val-required="Mật khẩu không được để trống." id="Password" name="Password" placeholder="Nhập mật khẩu của bạn" type="password">        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label text text-warning" })
        <div class="col-md-10">
            <input class="border-lg border-primary" data-val="true" data-val-equalto="Mật khẩu nhập lại không chính xác" data-val-equalto-other="*.Password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Nhập lại mật khẩu của bạn" type="password">        </div>
    </div>

    <div class="form-group" style="padding:40px 20px">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary btn-outline-primary" value="Đăng ký" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
